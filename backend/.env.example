# Database Configuration
# IMPORTANT: Change these credentials in production!
DATABASE_URL=postgresql://nexus_user:CHANGE_THIS_PASSWORD@localhost:5432/nexus

# Security
# CRITICAL: Generate a secure random key for production!
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY_MINIMUM_32_CHARACTERS

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://acidashboard.aci.local:3000

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password

# Frontend URL for email links
FRONTEND_URL=http://acidashboard.aci.local:3000
